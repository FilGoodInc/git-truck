{
  "name": "git-truck-grouping-ruleset",
  "description": "Grouping ruleset for Git Truck",
  "hideUngroupedItems": true,
  "ruleset": [
    {
      "name": "Typescript",
      "description": "File extensions containing TypeScript code.",
      "conditions": [
        {
          "type": "fileExtension",
          "value": "ts"
        },
        {
          "type": "fileExtension",
          "value": "tsx"
        }
      ]
    },
    {
      "name": "Test Files",
      "description": "File names containing test code.",
      "conditions": [
        {
          "type": "fileName",
          "value": "test"
        },
        {
          "type": "fileName",
          "value": "spec"
        }
      ]
    },
    {
      "name": "Objects",
      "description": "Files containing object definitions in their content.",
      "conditions": [
        {
          "type": "fileContent",
          "value": "object"
        },
        {
          "type": "fileContent",
          "value": "interface"
        }
      ]
    },
    {
      "name": "Features",
      "description": "Folders that define features in their content.",
      "conditions": [
        {
          "type": "folderName",
          "value": "analyzer"
        },
        {
          "type": "folderContent",
          "value": "components"
        }
      ]
    }
  ]
}
